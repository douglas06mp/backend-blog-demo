<%- include("partials/header")  -%>

<h1 class="mt-3">Add New Post</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="">Post</label>
    <textarea class="form-control" type="text" name="postContent" rows="6"></textarea>
  </div>
  <button class="btn btn-primary btn-md" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer")  -%>
