<%- include("partials/header")  -%>

<h1>Home</h1>
<p><%= content %></p>

<div class="posts">
  <% posts.forEach(post => { %>
    <div class="post">
      <h3> <%= post.title %> </h3>
      <p> <%= `${post.content.substring(0, 200)} ...` %> <a href="/posts/<%= post._id %>">Read More</a> </p>
    </div>
  <% }) %>
</div>

